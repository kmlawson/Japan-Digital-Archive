<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
       	<meta name="robots" content="noindex,follow">
		<meta name="description" content="">
		<meta name="keywords" content="">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        {% block title %}
        {% endblock %}
         <link href="{{ asset('jda/css/bootstrap.css')}}" rel="stylesheet" type="text/css">
			<link href="{{ asset('jda/css/home.css')}}" rel="stylesheet" type="text/css">
			<link href="{{ asset('jda/css/style.css')}}" rel="stylesheet" type="text/css">
			<link rel="shortcut icon" type="image/x-icon" href="{{ asset('jda/images/jda.ico')}}"> 
         
         {% block stylesheets %}
	
			
			
		{% endblock %}
				
		<script> 
			sessionStorage.setItem('directory', '{{directory}}');
			sessionStorage.setItem('hostname','{{hostname}}');
		</script>
		
		
		{% block scripts %}
		{% endblock %}
		
		
		
    </head>
    
  <body>
		{% set locale = app.session.locale  %}

		{% block header %}
		<div class="white-background"></div>
			<div id="header-bar"><div id="header-english">

		<header class="clearfix"> 
		{% if locale == 'ja' %}
			<a href="{{path('home', { '_locale': locale })}}"><img id="logo" class="home-english" src="{{ asset('jda/images/logo-jp.png')}}"></a>
		{% else %}
			<a href="{{path('home', { '_locale': locale })}}"><img id="logo" class="home-english" src="{{ asset('jda/images/logo.png')}}"></a>
		{% endif %}
		
		<a href='#myModal' class='alpha-header' data-toggle='modal'>alpha</a>
		
		<div id="user-bar">
			<ul id="header-menu" class="unstyled">

				
				{% if locale == 'ja' %}
					<li>{% trans %}jda.header.japanese{% endtrans %}</li>
					<li>
						{% if page == 'home' %}
							<a href="{{path('home', { '_locale': 'en' })}}">
						{% elseif page == 'about' %}
							<a href="{{path('about', { '_locale': 'en' })}}">
						{% elseif page == 'search' %}
							<a href="{{path('search', { '_locale': 'en' })}}">
						{% else %}
							<a href="{{path('user_registration', { '_locale': 'en' })}}">
						{% endif %}
						{% trans %}jda.header.english{% endtrans %}</a>
					</li>
				{% else %}
					<li>
						{% if page == 'home' %}
							<a href="{{path('home', { '_locale': 'ja' })}}">
						{% elseif page == 'about' %}
							<a href="{{path('about', { '_locale': 'ja' })}}">
						{% elseif page == 'search' %}
							<a href="{{path('search', { '_locale': 'ja' })}}">
						{% else %}
							<a href="{{path('user_registration', { '_locale': 'ja' })}}">
						{% endif %}
						{% trans %}jda.header.japanese{% endtrans %}</a>
					</li>
					<li>{% trans %}jda.header.english{% endtrans %}</li>
				{% endif %}
				
				<li>/</li>
				
				<li><a  href="{{path('about', { '_locale': locale})}}" class="about-english">{% trans %}jda.header.about{% endtrans %}</a></li>
				<li><a href="mailto: feedback@jdarchive.org" target="_blank">{% trans %}jda.header.feedback{% endtrans %}</a></li>
				{% if is_granted('ROLE_ADMIN') %}
					<li><a href="{{ path('fos_user_registration_register') }}" class="dark">Register a new user</a></li>
				{% endif %}
				<li><a href='{{ path('_security_logout')}}'>{% trans %}jda.header.logout{% endtrans %}</a></li>
				<!--
				<li><a href='#' class='btn success small'>{% trans %}jda.home.add{% endtrans %}</a></li>
				-->
				<!--
				<li><a href="#">login</a></li>
				<li>/</li>
				<li><a href="#">register</a></li>
				-->
			</ul>
		</div>

			</header>
		</div></div>

		
  		{% endblock %}
				
		{% block content %}
		{% endblock %}
		   
		{% block footer %}
		{% endblock %}


		
			
			<div class="modal" id="myModal" style='display:none'>
				<div class="modal-header">
					<a class="close" data-dismiss="modal">Ã—</a>
					<h3>{% trans %}jda.header.aboutalpha{% endtrans %}</h3>
				</div>
				<div class="modal-body">
					<p>{% trans %}jda.header.alphadescription{% endtrans %}</p>
				</div>

			</div>
			

		
         
    </body>
</html>
